;====================================
;
; Renesas Condor SDK Writer
;
;====================================
;=============================
; dir_top
;=============================
getdir __dir
sprintf2 dir_top "%s\..\.." __dir

;=============================
; os, board, baudrate
;=============================
board	 = "condor"
soc_ws	 = "v3h2"
os	 = "sdk"
baudrate = 115200	; used at init / main

;=============================
; connection check
;=============================
sprintf2 __soc "%s\%s\config\os\%s\connection" dir_top board os
include __soc

func_name = "connection_check"
call call_func

;=============================
; load addr_map
;=============================
func_name = "load_addr_map"
call call_func

;=============================
; select srec dir
;=============================
func_name = "select_srec_dir"
call call_func

;=============================
; load dip-swich settings
;=============================
sprintf2 sw_file "%s\%s\config\sw" dir_top board
func_name = "dip_switch_msg"
call call_func

;=============================
; load mot
;=============================
sprintf2 mot_file "%s\%s" dir_srec mot_file

func_name = "salvator_type_init_mot1"
call call_func

;=============================
; run_main
; same as StarterKit
;=============================
select_ans = "3"
yes_loop = 2
func_name = "starterkit_type_main"
call call_func

;=============================
; dip-swich setting back
;=============================
func_name = "salvator_type_init_mot2"
call call_func

exit
;=============================
; call_func
;=============================
: call_func
sprintf2 func "%s\script\ttm\%s" dir_top func_name
include func
return
