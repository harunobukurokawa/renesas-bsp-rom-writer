;====================================
;
; Renesas Salvator Yocto Writer
;
;====================================
;=============================
; dir_top
;=============================
getdir __dir
sprintf2 dir_top "%s\..\.." __dir

;=============================
; os, board, baudrate
;=============================
board	 = "salvator"
os	 = "yocto"
baudrate = 115200	; used at init / main

;=============================
; connection check (yocto)
;=============================
sprintf2 __soc "%s\%s\config\os\%s\connection" dir_top board os
include __soc

func_name = "connection_check"
call call_func

;=============================
; load soc
;=============================
sprintf2 __soc "%s\%s\config\soc" dir_top board
include __soc

;=============================
; load addr_map
;=============================
func_name = "load_addr_map_with_soc"
call call_func

;=============================
; select mode
;=============================
func_name = "select_mode_with_mot"
call call_func

;=============================
; select srec dir
;=============================
func_name = "select_srec_dir"
call call_func

;=============================
; load dip switch settings
;=============================
sprintf2 sw_file "%s\%s\config\sw\%s" dir_top board mode
func_name = "dip_switch_msg"
call call_func

;=============================
; init for each mode
;=============================
strcompare mode "mot"
if result=0 then
   sprintf2 mot_file "%s\%s\%s" dir_top board mot
   func_name = "salvator_type_init_mot1"
else
   ; same as starterkit init
   func_name = "starterkit_type_init_normal"
endif
call call_func

;=============================
; speed_up
;=============================
func_name = "speed_up"
call call_func

;=============================
; run_main
;=============================
; same as starterkit init
select_ans = "3"
yes_loop = 2
func_name = "starterkit_type_main"
call call_func

;=============================
; init for mot if needed
;=============================
strcompare mode "mot"
if result=0 then
   func_name = "salvator_type_init_mot2"
  call call_func
endif

;=============================
; finish
;=============================
messagebox "finished" "message"

exit
;=============================
; call_func
;=============================
: call_func
sprintf2 func "%s\script\ttm\%s" dir_top func_name
include func
return
