;====================================
;
; Renesas StarterKit ROM Writer
;
;====================================
;=============================
; set 1 if you want to be asked
;=============================
ask_in_main_loop = 0

;=============================
; top dir
;=============================
getdir top
dirname top top

;=============================
;
; SoC type and Files
;
;=============================
num_soc = 5
strdim soc	num_soc
strdim soc_file	num_soc

soc[0] = "H3 4G"
soc[1] = "H3 8G"
soc[2] = "M3 4G"
soc[3] = "M3 8G"
soc[4] = "M3N"

soc_file[0] = "h3_4g"
soc_file[1] = "h3_8g"
soc_file[2] = "m3_4g"
soc_file[3] = "m3_8g"
soc_file[4] = "m3n"

;=============================
;
; Auto Mode
;
;=============================
auto_mode = "salvator"

;=============================
;
; Max list number
; Max DipSwitch setting message number
;
; see below settings on each soc settings file
;
;	list
;	dipswitch_h_update
;	dipswitch_h_normal
;
;=============================
num_list = 6
num_dipswitch_a = 2
num_dipswitch_h = 5

;=============================
;
; run main loop
; reuse Starterkit's lib
;
;=============================
sprintf2 lib "%s\..\starterkit\windows\rom_writer.lib" top
include lib
end
