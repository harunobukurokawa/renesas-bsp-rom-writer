;
; select srec dir
; should be called after load_addr_map
;
; require
;	board
;	os
;
; require (load_addr_map)
;	ver
;	soc_ws
;	addr_map
;	num_addr_map
;
; return
;	dir_srec
;

;
; select srec dir
;
groupmatchstr1="Select srec binary dir for"
sprintf2 groupmatchstr2 "[%s][%s][%s][%s]" board soc_ws os ver
strjoin __txt "\n" 2
strspecial __txt

dirnamebox __txt

; end if canceled
if result!=1 end

dir_srec = inputstr

;
; file check
;
__error = ""
for i 0 num_addr_map-1
  strsplit addr_map[i] ","

  sprintf2 __file "%s\%s" dir_srec groupmatchstr3
  filesearch __file
  if result!=1 sprintf2 __error "%s\n%s" __error groupmatchstr3
next

strcompare __error ""
if result!=0 then
  sprintf2 __error "These srec binary are required, nut not found\n\n%s" __error
  strspecial __error
  messagebox __error "error"
  end
endif

