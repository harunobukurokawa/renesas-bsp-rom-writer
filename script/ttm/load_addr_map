;
; ${renesas-bsp-rom-writer}\${board}\config\os\${os}\config
; should have necessary settings
;
; require
;	list_soc
;	list_soc_explanation
;	list_version
;	list_map
;	num_list_soc_explai
;
; return
;	ver
;	soc_ws		# h3_4g
;	soc		# h3
;	addr_map	# load from ${renesas-bsp-rom-writer}\${board}\config\os\${os}\${__map}\${soc_ws}
;	num_addr_map	#
;

;
; load config
;
sprintf2 __tmp "%s\%s\config\os\%s\config" dir_top board os
include __tmp

;
; converter version -> map
;
sprintf2 __txt "Which [%s] Version ?" os
listbox __txt "Version Select" list_version
if result<0 end

ver = list_version[result]
__map = list_map[result]

;
; create explanation message
;
__explanation = list_soc_explanation[0]
for i 1 num_list_soc_explanation-1
   groupmatchstr1=__explanation
   groupmatchstr2=list_soc_explanation[i]
   strjoin __explanation "\n" 2
next
strspecial __explanation

listbox __explanation "SoC Select" list_soc
if result<0 end

;
; soc_ws : h3_4g
; soc    : h3
;
soc_ws = list_soc[result]

groupmatchstr1 = soc_ws
strmatch soc_ws "(.*)_.*"
soc = groupmatchstr1

;
; load addr_map
;
sprintf2 __tmp "%s\%s\config\os\%s\%s\%s" dir_top board os __map soc_ws
include __tmp
